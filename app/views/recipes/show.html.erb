<div class="recipe-banner" style="background-image: url('<%= @recipe.image_url %>')"></div>
<div class="container">
  <h3><%= @recipe.name %></h3>
</div>

<div class="d-flex row">
  <% @ingredients.each do |ingredient|%>
  <div class="m-auto my-4 col-3 text-center card-ingredient">
    <p><%= "#{ingredient.ingredient.name}" %></p>
    <%= image_tag ingredient.ingredient.image, class: "list-ingredients mt-2" %>
    <p><%= "Doses: #{ingredient.dose}" %></p>
  </div>
  <% end %>
</div>





  <% @steps.each do |step|%>
    <div class="container">
      <p><%= "#{step.order}- #{step.description}" %></p>

    </div>
  <% end %>

