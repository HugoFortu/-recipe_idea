<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-4">
      <h2>Créer votre compte</h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :name,  autofocus: true %>
          <%= f.input :email, required: true, placeholder: "bob@gmail.com" %>
          <%= f.input :password, required: true, placeholder: "••••••" %>
          <%= f.input :password_confirmation, required: true, placeholder: "••••••" %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "S'enregistrer", class: "btn btn-primary" %>
        </div>
        <%= render "devise/shared/links" %>
      <% end %>
    </div>
  </div>
</div>

