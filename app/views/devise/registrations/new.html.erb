<div class="container mt-4 " data-controller="sign-in-tempo">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-4">
      <h2>Créer votre compte</h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}) do |f| %>
        <div class="form-inputs">
          <%= f.input :name,  autofocus: true %>
          <%= f.input :email, required: true, placeholder: "bob@gmail.com" %>
          <%= f.input :password, required: true, placeholder: "••••••" %>
          <%= f.input :password_confirmation, required: true, placeholder: "••••••" %>
        </div>
        <div class="form-actions" >
          <%= f.button :submit, "S'enregistrer", class: "btn btn-primary", data: {"action":"sign-in-tempo#submit"} %>
        </div>
        <%= render "devise/shared/links" %>
      <% end %>
    </div>
  </div>
  <div data-sign-in-tempo-target="loading" class="loading d-none">Loading&#8230;</div>
</div>

