<h2 class="text-center">Sign In</h2>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <div class="input pt-6 pb-2">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
    </div>
    <div class="input-w py-2">
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
    </div>
    <div class="input-w py-2">
      <%= f.input :remember_me, as: :boolean %>
    </div>
  </div>

  <button class="form-actions bg-navy-card hover:border py-2 px-4 rounded-full shadow">
    <%= f.button :submit, "Log in", style:"color: white;"%>
  </button>

  <% end %>

  <div class="link-signin text-center flex items-start mt-3 lg:items-end lg:justify-center pb-8">
    <%= render "devise/shared/links" %>
  </div>
</div>
