<!DOCTYPE html>
<html>
  <head>
    <title>RecipeIdea</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>

    <%= render 'shared/navbar' %>

    <%= render 'shared/flashes' %>
    <div class="container mobile-adapt">
      <%= yield %>
      <%= turbo_frame_tag "remote_modal", target: "_top" %>
    </div>
    <% unless current_page?(new_user_registration_path) || current_page?(new_user_session_path) %>
      <%= render 'shared/navbar-mobile' %>
    <% end %>
  </body>
</html>
