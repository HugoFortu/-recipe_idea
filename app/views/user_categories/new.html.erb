<div data-controller="category-form">
  <%= simple_form_for [current_user, @user_category] do |f| %>
    <%= f.input :name %>
    <%= f.association :shop %>
    <%= f.label :image %>
    <%= f.input_field :image, data: {"category-form-target":"input"}, class:"d-none" %>
    <div class="d-flex">
      <% @images.each do |image|%>
        <div  data-action="click->category-form#check" data-category-form-target="image" id=<%="categories/#{image}"%> >
          <%= image_tag "categories/#{image}", width: "50px;"%>
        </div>
      <% end %>
    </div>
    <%= f.submit %>
  <% end %>
</div>
