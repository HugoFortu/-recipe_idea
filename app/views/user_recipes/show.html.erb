<div class="recipe-banner" style="background-image: url('<%= @user_recipe.recipe.image_url %>')"></div>
<div class="container text-center">
  <h3><%= @user_recipe.recipe.name %></h3>
  <div class="d-flex">
    <%= button_to add_to_list_user_recipe_path(@user_recipe), method: :get, class: "btn px-2 align-items-center" do %>
      <%= image_tag 'add-to-cart.png', class: "add-to-cart" %>
    <% end %>
  </div>
</div>

<div class="d-flex row ingredient-container">
  <% @ingredients.each do |ingredient|%>
  <div class="col-3 text-center card-ingredient">
    <p id="ingredient-name"><%= "#{ingredient.ingredient.name}" %></p>
    <%= image_tag ingredient.ingredient.image, class: "list-ingredients mt-2" %>
    <% if ingredient.dose != "" %>
      <p><%= "QtÃ©: #{ingredient.dose}" %></p>
    <% end %>
  </div>
  <% end %>
</div>

<% @steps.each do |step|%>
  <div class="container">
    <p><%= "#{step.order}- #{step.description}" %></p>
  </div>
<% end %>

